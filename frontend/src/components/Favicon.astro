---
import { app } from 'src/app';
---

<link rel="icon" href={app.global?.favicon.main.data.attributes.url} sizes="any" />

{
  app.global?.favicon.main.data.attributes.mime === 'image/svg+xml' && (
    <link rel="icon" href={app.global?.favicon.main.data.attributes.url} type="image/svg+xml" />
  )
}

<link rel="apple-touch-icon" href={app.global?.favicon.main.data.attributes.url} sizes="180x180" />

<link rel="manifest" href="/site.webmanifest" />
