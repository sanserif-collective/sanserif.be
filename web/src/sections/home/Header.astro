---
import type { Home } from 'types/routes/home'
import Container from 'components/Container.astro'
import Text from 'components/Text.astro'
import Sprite from 'components/Sprite.astro'

type Props = {
  content: Home.Header
}

const { content } = Astro.props as Props
---

<Container
  as="header"
  fullscreen={true}
  class="portrait:children:col-start-2 portrait:children:col-end-12"
>

  <skew-wrapper class="flex items-end col-start-2 col-end-12 row-start-1 row-end-12 overflow-hidden portrait:row-end-11">
    <Text as="h1" size="3xl" class="max-w-[6em]">{content.title}</Text>
  </skew-wrapper>

  <div class="col-start-11 row-start-2 row-end-12 flex flex-col items-end justify-end portrait:row-start-12">
    <div class="flex flex-col items-center portrait:w-full portrait:flex-row-reverse">
      <Sprite id="arrow" class="mb-4 w-6 h-6 text-black portrait:mb-0 portrait:rotate-90" />
      <Text
        as="h2"
        size="lg"
        class="writing-v-rl -scale-100 portrait:scale-100 portrait:writing-h-tb portrait:mr-4"
      >
        {content.subtitle}
      </Text>
    </div>
  </div>

</Container>
