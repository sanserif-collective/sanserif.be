---
import Container from 'components/Container.astro'
import CenteredImage from 'components/project/CenteredImage.astro'
import FullscreenImage from 'components/project/FullscreenImage.astro'
import ImageAndText from 'components/project/ImageAndText.astro'
import ThreeImages from 'components/project/ThreeImages.astro'
import TwoImagesAndOneText from 'components/project/TwoImagesAndOneText.astro'
import type { Shared } from 'types/shared'

type Props = {
  layouts: Shared.Project.Subject.Set[]
}

const { layouts } = Astro.props as Props
---

<Container class="space-x-custom-space-double justify-start portrait:children:row-auto portrait:children:col-start-2 portrait:children:col-end-12 portrait:space-x-0 portrait:space-y-custom-space-double">
  {layouts.map(({ __typename, ...layout }) => (
    <>
      {__typename === 'ComponentProjectFullscreenImage' && (
        <FullscreenImage layout={layout as Shared.Project.Subject.Components.FullscreenImage} />
      )}
      {__typename === 'ComponentProjectCenteredImage' && (
        <CenteredImage layout={layout as Shared.Project.Subject.Components.CenteredImage} />
      )}
      {__typename === 'ComponentProjectImageAndText' && (
        <ImageAndText layout={layout as Shared.Project.Subject.Components.ImageAndText} />
      )}
      {__typename === 'ComponentProjectTwoImagesAndOneText' && (
        <TwoImagesAndOneText layout={layout as Shared.Project.Subject.Components.TwoImagesAndOneText} />
      )}
      {__typename === 'ComponentProjectThreeImages' && (
        <ThreeImages layout={layout as Shared.Project.Subject.Components.ThreeImages} />
      )}
    </>
  ))}
</Container>
