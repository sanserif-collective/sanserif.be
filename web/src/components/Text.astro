---
import type { AstroBuiltinAttributes } from 'astro'

type Props = {
  as?: string
  class?: string
  'class:list'?: AstroBuiltinAttributes['class:list']
  href?: string
  size?: keyof typeof sizes
  [x: string]: unknown
}

const sizes = {
  'base': 'text-base',
  'lg': 'text-lg variation-normal',
  'xl': 'text-xl',
  '2xl': 'text-2xl variation-light',
  '3xl': 'text-3xl variation-light',
  '4xl': 'text-4xl variation-light',
  '5xl': 'text-5xl variation-light'
}

const {
  as: Tag = 'p',
  class: className,
  'class:list': classList,
  size = 'base',
  ...rest
} = Astro.props as Props
---

<Tag class:list={[sizes[size], className, classList]} {...rest}>
  <slot />
</Tag>
