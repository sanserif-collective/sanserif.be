---
import Image from 'components/Image.astro';
import type { Shared } from 'types/shared';

type Props = {
  layout: Shared.Project.Subject.Components.CenteredImage;
};

const { layout }: Props = Astro.props;
---

<sanserif-skew
  class:list={['row-start-5 row-end-11 flex justify-center items-center', 'portrait:justify-start']}
>
  <parallax-wrapper>
    <Image
      src={layout.image.data.attributes.url}
      width={1200}
      height={840}
      class="w-[50vh] portrait:w-[60vw]"
    />
  </parallax-wrapper>
</sanserif-skew>
