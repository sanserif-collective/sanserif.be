---
import Image from 'components/Image.astro';
import type { Shared } from 'types/shared';

type Props = {
  layout: Shared.Project.Subject.Components.CenteredVerticalImage;
};

const { layout }: Props = Astro.props;
---

<sanserif-skew class="row-start-2 row-end-12 grid place-content-center">
  <parallax-wrapper>
    <Image
      src={layout.image.data.attributes.url}
      width={840}
      height={1200}
      class="w-[60vh] portrait:w-[60vw]"
    />
  </parallax-wrapper>
</sanserif-skew>
