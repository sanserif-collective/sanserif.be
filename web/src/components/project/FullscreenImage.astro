---
import Image from 'components/Image.astro'
import cloudinary from 'src/cloudinary'
import type { Shared } from 'types/shared'

type Props = {
  layout: Shared.Project.Subject.Components.FullscreenImage
}

const { layout } = Astro.props as Props

const image = cloudinary.image(layout.image.data.attributes.provider_metadata.public_id)
---

<skew-wrapper class="grid place-content-center row-start-2 row-end-12">
  <parallax-wrapper>
    <Image
      src={image.toURL()}
      width={1200}
      height={840}
      class="w-[100vh] portrait:w-[calc(100vw_-_calc(var(--custom-space)_*_2))]"
    />
  </parallax-wrapper>
</skew-wrapper>
