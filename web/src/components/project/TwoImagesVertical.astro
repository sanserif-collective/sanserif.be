---
import Image from 'components/Image.astro';
import type { Shared } from 'types/shared';

type Props = {
  layout: Shared.Project.Subject.Components.TwoImagesVertical;
};

const { layout }: Props = Astro.props;
---

<sanserif-skew class="row-start-2 row-end-12 col-span-2 flex justify-center items-start">
  <parallax-wrapper>
    <Image
      src={layout.image1.data.attributes.url}
      width={400}
      height={560}
      class="w-[40vh] portrait:w-[50vw]"
    />
  </parallax-wrapper>
</sanserif-skew>

<sanserif-skew class="row-start-1 row-end-12 flex items-end portrait:justify-end">
  <parallax-wrapper>
    <Image
      src={layout.image2.data.attributes.url}
      width={400}
      height={560}
      class="w-[40vh] portrait:w-[50vw]"
    />
  </parallax-wrapper>
</sanserif-skew>
