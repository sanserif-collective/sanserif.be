---
import { Resize } from '@cloudinary/url-gen/actions'
import { app } from 'src/app';
import { cloudinary } from 'src/cloudinary'

const favicon = cloudinary.image(app.global?.favicon.main.data.attributes.provider_metadata.public_id)
---

<link
  rel="icon"
  href={favicon.resize(Resize.thumbnail(32, 32)).format('ico').toURL()}
  sizes="any"
>

{app.global?.favicon.main.data.attributes.mime === 'image/svg+xml' && (
  <link
    rel="icon"
    href={favicon.toURL()}
    type="image/svg+xml"
  >
)}

<link
  rel="apple-touch-icon"
  href={favicon.resize(Resize.thumbnail(180, 180)).format('png').toURL()}
  sizes="180x180"
>

<link
  rel="manifest"
  href="/site.webmanifest"
>
