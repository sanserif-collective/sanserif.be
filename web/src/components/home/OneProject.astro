---
import ProjectCard from 'components/ProjectCard.astro'
import type { Home } from 'types/routes/home'

type Props = {
  projects: Home.Projects.Components.OneProject
}

const { projects } = Astro.props as Props
---

<article
  class:list={[
    'items-center row-start-5 row-end-12 px-custom-space portrait:col-start-2',
    'portrait:col-end-12 portrait:px-0 portrait:justify-center'
  ]}
>
  <ProjectCard
    class="w-[69vh] max-w-5xl portrait:w-[80vw]"
    width={620}
    height={410}
    project={projects.project.data.attributes}
  />
</article>
