---
import Text from 'components/Text.astro'
import Sprite from 'components/Sprite.astro'
import clsx from 'clsx'

type Props = {
  url: string
  caption: string
}

const { url, caption } = Astro.props as Props
---

<next-link>
  <a href={url} class="block">
    <Text
      as="strong"
      size="3xl"
      class="relative font-normal"
    >
      <div class="overflow-hidden grid">
        <skew-wrapper class="row-start-1 col-start-1 portrait:p-custom-space" data-split>
          <slot />
        </skew-wrapper>
        <skew-wrapper class="row-start-1 col-start-1" data-split>
          <slot />
        </skew-wrapper>
      </div>
    </Text>
    <Text
      as="small"
      class="mt-8 transition-all duration-500 ease-in-out flex items-center justify-center"
    >
      {caption}
      <Sprite id="arrow" class="h-4 w-4 ml-4" />
    </Text>
  </a>
</next-link>
